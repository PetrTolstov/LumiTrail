generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String          @id @default(cuid())
  email            String          @unique
  passwordHash     String
  role             Role
  displayName      String?
  xpTotal          Int             @default(0)
  createdAt        DateTime        @default(now())
  accounts         Account[]
  lessonAttempts   LessonAttempt[]
  reviewedAttempts LessonAttempt[] @relation("Reviewer")
  programs         Program[]       @relation("ProgramOwner")
  programMembers   ProgramMember[]
  sessions         Session[]
  xpLedger         XpLedger[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Program {
  id             String          @id @default(cuid())
  ownerId        String
  title          String
  description    String?
  createdAt      DateTime        @default(now())
  lessons        Lesson[]
  owner          User            @relation("ProgramOwner", fields: [ownerId], references: [id])
  programMembers ProgramMember[]
}

model ProgramMember {
  id        String  @id @default(cuid())
  programId String
  childId   String
  child     User    @relation(fields: [childId], references: [id])
  program   Program @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@unique([programId, childId])
}

model Lesson {
  id                   String          @id @default(cuid())
  programId            String
  title                String
  description          String?
  orderIndex           Int
  prerequisiteLessonId String?
  createdAt            DateTime        @default(now())
  prerequisiteLesson   Lesson?         @relation("LessonPrereq", fields: [prerequisiteLessonId], references: [id])
  dependentLessons     Lesson[]        @relation("LessonPrereq")
  program              Program         @relation(fields: [programId], references: [id], onDelete: Cascade)
  lessonAttempts       LessonAttempt[]
  tasks                Task[]

  @@index([programId, orderIndex])
}

model Task {
  id             String       @id @default(cuid())
  lessonId       String
  promptText     String?
  promptImageUrl String?
  answerType     AnswerType
  orderIndex     Int
  lesson         Lesson       @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  taskAnswers    TaskAnswer[]
  options        TaskOption[]

  @@index([lessonId, orderIndex])
}

model TaskOption {
  id          String       @id @default(cuid())
  taskId      String
  label       String
  isCorrect   Boolean
  taskAnswers TaskAnswer[]
  task        Task         @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model LessonAttempt {
  id          String        @id @default(cuid())
  lessonId    String
  childId     String
  status      AttemptStatus
  submittedAt DateTime?
  reviewedAt  DateTime?
  reviewedBy  String?
  awardedXp   Int           @default(0)
  child       User          @relation(fields: [childId], references: [id])
  lesson      Lesson        @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  reviewer    User?         @relation("Reviewer", fields: [reviewedBy], references: [id])
  taskAnswers TaskAnswer[]

  @@index([childId, lessonId])
}

model TaskAnswer {
  id               String        @id @default(cuid())
  attemptId        String
  taskId           String
  answerText       String?
  selectedOptionId String?
  fileUrl          String?
  attempt          LessonAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  selectedOption   TaskOption?   @relation(fields: [selectedOptionId], references: [id])
  task             Task          @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model XpLedger {
  id        String   @id @default(cuid())
  userId    String
  delta     Int
  source    String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

enum Role {
  parent
  child
}

enum AttemptStatus {
  draft
  submitted
  under_review
  passed
  failed
}

enum AnswerType {
  text
  choices
  file
}
